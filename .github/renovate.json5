{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": [
    "fmunteanu"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "golang/go",
      "extractVersionTemplate": "^go(?<version>.+)$",
      "fileMatch": [
        ".github/workflows/hugo.yml"
      ],
      "matchStrings": [
        "go-version:\\s+(?<currentValue>.+)"
      ]
    }
  ],
  "enabledManagers": [
    "custom.regex",
    "github-actions",
    "gomod"
  ],
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependency"
  ],
  "packageRules": [
    {
      "groupName": "golang",
      "matchManagers": [
        "gomod"
      ],
      "rangeStrategy": "bump"
    }
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0
}
