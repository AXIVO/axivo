{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "assignees": [
    "fmunteanu"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "golang/go",
      "extractVersionTemplate": "^go(?<version>.+)$",
      "fileMatch": [
        ".github/workflows/hugo.yml"
      ],
      "matchStrings": [
        "go-version:\\s+(?<currentValue>.+)"
      ]
    }
  ],
  "enabledManagers": [
    "custom.regex",
    "github-actions",
    "gomod"
  ],
  "extends": [
    "config:recommended"
  ],
  "labels": [
    "dependency"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "github-tags"
      ],
      "groupName": "dependency golang/go",
      "matchManagers": [
        "custom.regex"
      ],
      "matchPackagePrefixes": [
        "golang/"
      ]
    },
    {
      "groupName": "dependency golang/go",
      "matchDatasources": [
        "golang-version"
      ],
      "matchManagers": [
        "gomod"
      ],
      "rangeStrategy": "bump"
    },
    {
      "groupName": "hugo modules",
      "enabled": true,
      "matchDatasources": [
        "go"
      ],
      "matchManagers": [
        "gomod"
      ],
      "matchPackagePrefixes": [
        "github.com/axivo/website",
        "github.com/imfing/hextra"
      ],
      "rangeStrategy": "bump"
    }
  ],
  "prConcurrentLimit": 0,
  "prHourlyLimit": 0
}
